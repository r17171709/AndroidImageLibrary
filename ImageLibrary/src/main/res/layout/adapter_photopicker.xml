<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/photopicker_image"
        android:layout_width="match_parent"
        android:layout_height="118dip"
        fresco:failureImage="@mipmap/icon_default_image"
        fresco:failureImageScaleType="focusCrop"
        fresco:placeholderImage="@mipmap/icon_default_image"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:retryImage="@mipmap/icon_default_image"
        fresco:retryImageScaleType="focusCrop" />

    <ImageView
        android:id="@+id/photopicker_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dip" />
</RelativeLayout>